<div class="mx-auto" style="width: 1000px">
 <div class="container">
   <span class="p-3 mb-2 bg-light text-dark">新規投稿
   </span>
 </div>
 </div>

<div class="mx-auto" style="width: 400px">
<%#= form_with model:customes_url do |f| %>
<%= form_with model:post, url:root_path do |f| %>
<%#= form_with model: @customer, url:customer_posts_path ,local: false do |f| %>
<div class="inputImage">
    <%= f.label :写真 %>
  　<%= f.file_field :image, placeholder: "写真", accept: "image/*" %>
</div>
  <div class="field">
      <%= f.label :写真の住所 %>
      　<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"〒997-0045　山形県鶴岡市西新斎町9-10"%>
    </div>

    <div class="field">
       <%= f.label :写真の紹介文 %>
       <%= f.text_area :introduction, placeholder:"ここに説明文を記述します。", size:"30x5" %>
       <!--<%#= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"ここに説明文を記述します"  cols="30" rows="5" %>-->
       </div>
    <div class="field">
      <%= f.label :投稿者の名前 %>
      <%= f.text_field :price, autofocus: true, id:"inputPrice", placeholder: "EMi" %>
    </div>
       <div class="field">
      <%= f.label :タグ %>
      <%= f.text_field :price, autofocus: true, id:"inputPrice", placeholder: "＃山形県　＃冬　＃雪道　＃信号待ちにいい感じの写真が撮れたので投稿します" %>
    </div>
    <div class="actions">
      　　　　　　　<%= f.submit "新規登録",class: "btn btn-success" %>
    </div>
     <% end %>

</div>
