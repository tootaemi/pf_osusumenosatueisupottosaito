<h2>Actions --></h2>
<%= link_to "Delete", tag_path(@tag), method: :delete, data: { confirm: "関連づいた記事のタグが空になりますがタグを削除しますか？" } %>
<h2>Tag --></h2>
<h3><%= @tag_name %></h3>
<ul>
  <% @tag.posts.each do |post| %>
  <li>
    <%= link_to post.hash_tags, tag_path %>
  </li>
  <% end %>
</ul>
<h2>ハッシュタグ一覧</h2>
<div class= "hashtag-name"></div>
<%= link_to "Back", posts_path %>
<p id="notice"><%= notice %></p>
<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Hashbody</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.introduction %></td>
    <td><%= link_to "Show", post %></td>
  </tr>
  <% end %>
</tbody>
</table><br>
<%= link_to "New Post", new_post_path %>